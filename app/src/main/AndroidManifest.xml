<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.EXPAND_STATUS_BAR" />
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <service
            android:name=".services.LockAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="false">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>
        <receiver
            android:name=".services.LockDeviceAdminReceiver"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
        </receiver>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:taskAffinity=""
            android:stateNotNeeded="true"
            android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.GestureSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.DisplaySettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.ThemeSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.TimeSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.DateSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.SettingsButtonSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.SearchButtonSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.HomeSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.IconSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.TextSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.WallpaperSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".settings.HomeScreenPaddingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AppLauncherActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HideAppsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.AppSelectorActivity"
            android:exported="false" />
        <activity
            android:name=".ui.KOReaderHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.FolderActivity"
            android:exported="false" />
    </application>

</manifest>