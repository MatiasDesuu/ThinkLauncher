<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back_arrow"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:tint="?attr/text_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/app_icons"
                android:layout_marginEnd="8dp"
                android:tint="?attr/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Icon Settings"
                android:textColor="?attr/text_color"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?attr/text_color" />

    <FrameLayout
        android:id="@+id/settings_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/settings_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:id="@+id/settings_items_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/app_icons"
                        android:layout_marginEnd="8dp"
                        android:tint="?attr/text_color" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Show Icons:"
                        android:textColor="?attr/text_color"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <include layout="@layout/plus_minus_layout"
                        android:id="@+id/show_icons_container" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/icon_options_layout">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/text_size"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Show App Names:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/show_app_names_container" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/app_name_position_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/horizontal_alignment"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="App Name Position:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/app_name_position_container" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/style"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Icon Effect:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/icon_effect_container" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon_effect_color_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/colors"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Icon Effect Color:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/icon_effect_color_container" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/monochrome_icons"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Monochrome Icons:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/monochrome_icons_container" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/dynamic_icons"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dynamic Icons:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/dynamic_icons_container" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dynamic_colors_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/dynamic_icons"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Dynamic Colors:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/dynamic_colors_container" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon_background_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/background_icons"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Icon Background:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/icon_background_container" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/icon_shape_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icon_shape"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Icon Shape:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/icon_shape_container" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_margin="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/app_icons"
                            android:layout_marginEnd="8dp"
                            android:tint="?attr/text_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Icon Size:"
                            android:textColor="?attr/text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <include layout="@layout/plus_minus_layout"
                            android:id="@+id/icon_size_container" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?attr/text_color"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/prev_page_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_arrow"
            android:padding="4dp"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_page_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back_arrow"
            android:rotation="180"
            android:padding="4dp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</LinearLayout>
